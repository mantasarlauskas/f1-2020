{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2019",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "client": [
                "./client"
            ],
            "server": [
                "./server"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "**/testing",
        "**/*.test.tsx",
        "**/*.test.ts"
    ],
    "includes": [
        "./externals.d.ts"
    ]
}
